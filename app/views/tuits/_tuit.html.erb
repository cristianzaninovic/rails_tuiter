<li class="tweet-card">
  <div  id="<%= dom_id tuit %>" class="tweet-content">
    <div class="tweet-header">
      <span class="fullname">
        <strong><%= tuit.user_name %></strong>
      </span>
      <span class="tweet-time"><%= tuit.created %></span>
    </div>
    <a>
      <img class="tweet-card-avatar" src="<%= asset_path("default-pfp.png") %>" alt="">
    </a>
    <div class="tweet-text">
      <p class="" lang="es" data-aria-label-part="0"><%= tuit.description %></p>
    </div>
    <div class="tweet-footer">
      <a class="tweet-footer-btn">
        <i class="fa-regular fa-comment"></i><span><%= rand(1000) %></span>
      </a>
      <a class="tweet-footer-btn">
        <i class="fa-solid fa-rotate"></i><span><%= rand(1000) %></span>
      </a>
      <a class="tweet-footer-btn">
        <i class="fa-solid fa-heart"></i><span><%= rand(1000) %></span>
      </a>
      <a class="tweet-footer-btn">
        <i class="fa-regular fa-envelope"></i><span><%= rand(1000) %></span>
      </a>
    </div>
  </div>
</li>