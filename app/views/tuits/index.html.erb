<p style="color: green"><%= notice %></p>

<section id="tuits">
  <div class="container px-4">
    <div class="row gx-4 justify-content-center">
    <div class="col-lg-8">        
      <div class="text-white px-2 py-3" style="background-image: url('<%= asset_path('background.jpg')%>');">
        <div class="container-fluid px-2 justify-content-center">
          <h1 class="d-inline mx-2">Tuits</h1><i class="fa-brands fa-square-twitter fa-2xl" style="color: #ffffff;"></i>
        </div>  
        <div class="px-2">
          <%= form_tag(tuits_path, :method=>:get) do %>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", class: "btn btn-tuiter py-2" %>
          <% end %>
        </div>
      </div>
      <div id="tuits" class="col-6">
        <ol class="tweet-list">
        <% @tuits.each do |tuit| %>
          <%= render tuit %>
          <div class="container-fluid px-2 justify-content-center">
            <%= link_to "Show", tuit, :class=>"btn btn-follow" %>
            <%= link_to "Edit", edit_tuit_path(tuit) , :class=>"btn btn-follow" %>
            <%= link_to "Destroy", tuit, method: :delete, :class=>"btn btn-follow" %>
          </div>            
        <% end %>
        </ol>
        <div class="py-3"><%= pagy_bootstrap_nav(@pagy).html_safe %></div>
        <%= link_to "New tuit", new_tuit_path, :class=>"btn btn-tuiter py-2" %>
      </div>
    </div>
    </div>
  </div>
</section>

