<p style="color: green"><%= notice %></p>
<section id="tuits">
  <div class="container px-4">
    <div class="row gx-4 justify-content-center">
      <div class="col-lg-8">        
        <div class="bg-primary bg-gradient text-white px-2 py-3">
          <h1>Tuits</h1>
          <div class="px-2">
            <%= form_tag(tuits_path, :method=>:get) do %>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
        <div id="tuits" class="col-6">
          <ol class="tweet-list">
          <% @tuits.each do |tuit| %>
            <%= render tuit %>
            <div class="container-fluid px-2 justify-content-center">
              <%= link_to "Show", tuit, :class=>"btn btn-light" %>
              <%= link_to "Edit", edit_tuit_path(tuit) , :class=>"btn btn-light" %>
              <%= link_to "Destroy", tuit, method: :delete, :class=>"btn btn-light" %>
            </div>            
          <% end %>
          </ol>
          <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= link_to "New tuit", new_tuit_path %>
