<p style="color: green"><%= notice %></p>
<section id="tuits">
  <div class="container px-4">
    <div class="row gx-4 justify-content-center">
      <div class="col-lg-8">        
        <div class="bg-primary bg-gradient text-white px-2">
          <h1>Tuits</h1>
        </div>
        <div id="tuits" class="col-6">
          <ol class="tweet-list">
          <% @tuits.each do |tuit| %>
            <%= render tuit %>
            <%= link_to "Show this tuit", tuit, :class=>"btn btn-light" %>            
          <% end %>
          </ol>
          <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= link_to "New tuit", new_tuit_path %>
