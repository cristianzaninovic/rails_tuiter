<section id="tuit_form">
  <div class="container px-4">
    <div class="row gx-4 justify-content-center">
    <div class="col-lg-8">    
      <p style="color: green"><%= notice %></p>    
      <div class="text-white px-2 py-3" style="background-image: url('<%= asset_path('background.jpg')%>');">
        <h1>Tuit</h1>
      </div>
    </div>
    <div id="tuit_f" class="col-6 py-3">
      <%= render @tuit %>
      <div>
      <%= link_to "Edit this tuit", edit_tuit_path(@tuit) %> |
      <%= link_to "Back to tuits", tuits_path %>

      <%= button_to "Destroy this tuit", @tuit, method: :delete, class: "btn btn-tuiter py-2" %>
    </div>
    </div>
    <br>
    
  </div>

  
</section>